<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.abduljama.doctorwho.DoctorProfileActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_accent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/face" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Dr Sample One "
            android:textSize="28dp"

            android:id="@+id/txtDocName"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"/>


        <TextView
            android:id="@+id/txtHosp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=" Kenyatta National Hospital"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text=" +254708419086"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20sp"
        tools:context="com.abduljama.nagda2.MapsActivity" />

    <Button
        android:id="@+id/btn_book"
        style="?android:textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Book Now ! "
        android:textColor="@color/color_accent"
        android:textStyle="bold" />


</LinearLayout>
